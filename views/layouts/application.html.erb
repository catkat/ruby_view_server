<%
    def link_to(name, url)
        return "<a href='#{url}'>#{name}</a>"
     end
%>

<html>
  <body>
    <h1>You're using a layout</h1>
    <p>
      <h3> I'm a header</h3>
      <p>Put things in the header</p>
      <%= link_to('This is a link to Bing','http://bing.com') %>
      <a href="http://google.com">This is a link to google</a>
      <a href='me.html'>Me</a>

    </p>
    <hr />
    <div>
      <%= yield %>
    </div>
    <hr />
    <div>
      <h3> I'm a footer</h3>
      <p>Put things in the footer</p>
      <a href="http://en.wikipedia.org/wiki/Major_non-NATO_ally"> Read ME!</a>
      <%= link_to('SPAAAACE','http://en.wikipedia.org/wiki/Sub-orbital') %>
    </div>
  </body>
</html>